<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Eduardo Ocón APP</name>
    <description>
        Una APP para el CEIP Eduardo Ocón! News are just a *click* away!
    </description>
    <author email="izan@srizan.ml" href="http://srizan.ml">
        Izan Gil Cruz
    </author>
    <icon src="assets/eocon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="assets/splash.png" density="land-hdpi" />
        <preference name="SplashScreenDelay" value="5000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
